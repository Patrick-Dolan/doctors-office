@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Patient>

<h2>Patients</h2>

@if (@Model.Count == 0)
{
  <p>There are no patients in the system.</p>
}

<ul>
  @foreach (Patient patient in Model)
  {
    <li>Patient Name: @patient.Name - Patient Birthday: @patient.Birthday</li>
  }
</ul>

<p>@Html.ActionLink("Add patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>